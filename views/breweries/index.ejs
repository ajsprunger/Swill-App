<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="../stylesheets/breweries/index.css">
<%- include('../partials/nav') %>

<main>
  <h1>Breweries</h1>
  <form class="search" action="/breweries">
    <label>Name:
      <input type="text" name="name" autocomplete="off" id="name">
    </label>
    <label>City:
      <input type="text" name="city" autocomplete="off" id="city">
    </label>
    <label>State:
      <input type="text" name="state" autocomplete="off" id="state">
    </label>
    <button type="submit">Search</button>
  </form>
  <div id="buttonHolder">
    <a href="/breweries/<%= pageNumber-1 %>"><button type="button" class="next">Prev</button></a>
    <a href="/breweries/<%= pageNumber+1 %>"><button type="button" class="next">Next</button></a>
  </div>
  <table class="table-md">
    <thead>
      <tr>
        <th>Brewery</th>
        <th>City</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(brewery) { %>
        <tr>
          <td><%= brewery.name %></td>
          <td><%= brewery.city %></td>
          <td><%= brewery.state %></td>
          <td><a id="details" href="/breweries/show/<%= brewery.id %>">DETAILS</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>



<%- include('../partials/footer') %>
