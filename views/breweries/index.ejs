<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<link rel="stylesheet" href="../stylesheets/breweries/index.css">
<%- include('../partials/nav') %>

<main>
  <form class="search" action="">
    <label>Name:
      <input type="text" name="name" autocomplete="off" id="name">
    </label>
    <label>City:
      <input type="text" name="city" autocomplete="off" id="city">
    </label>
    <label>State:
      <input type="text" name="state" autocomplete="off" id="state">
    </label>
    <button type="submit">Search</button>
  </form>
  <h1>Breweries</h1>
  <table>
    <thead>
      <tr>
        <th>Brewery</th>
        <th>City</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(brewery) { %>
        <tr>
          <td><%= brewery.name %></td>
          <td><%= brewery.city %></td>
          <td><%= brewery.state %></td>
          <td><a id="details" href="/breweries/<%= brewery.id %>">DETAILS</a></td>
        </tr>
      <% }) %>
    </tbody>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>
  </table>
</main>



<%- include('../partials/footer') %>
