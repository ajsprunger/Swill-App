<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/breweries/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= data.name %></h1>
  <section>
    <% if(data.type) { %>
      <div>Type:</div>
      <div><%= data.type %></div>
    <% } %>
    <% if(data.street) { %>
      <div>Address:</div>
      <div><%= data.street %></div>
    <% } %>
    <% if(data.city) { %>
      <div>City:</div>
      <div><%= data.city %></div>
    <% } %>
    <% if(data.state) { %>
      <div>State:</div>
      <div><%= data.state %></div>
    <% } %>
    <% if(data.postal_code) { %>
      <div>ZIP:</div>
      <div><%= data.postal_code %></div>
    <% } %>
  </section>
</main>






