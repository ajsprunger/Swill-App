<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/breweries/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= data.name %></h1>
  <section>
    <% if(data.brewery_type) { %>
      <div>Type:</div>
      <div><%= data.brewery_type %></div>
    <% } %>
    <% if(data.street) { %>
      <div>Address:</div>
      <div><%= data.street %></div>
    <% } %>
    <% if(data.city) { %>
      <div>City:</div>
      <div><%= data.city %></div>
    <% } %>
    <% if(data.state) { %>
      <div>State:</div>
      <div><%= data.state %></div>
    <% } %>
    <% if(data.postal_code) { %>
      <div>ZIP:</div>
      <div><%= data.postal_code %></div>
    <% } %>
  </section>
  <form action="<%= data.id %>/reviews" method="POST">
    <textarea cols="40" rows="5" autocomplete="off">Add a Review</textarea>
    <select name="rating" id="dropdown">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <button type="submit">Submit</button>
  </form>
  <h2>Reviews</h2>
</main>






<%- include('../partials/footer') %>
